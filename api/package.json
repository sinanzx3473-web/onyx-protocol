    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/uuid": "^10.0.0",
    "@vitest/coverage-v8": "^3.0.0",
    "prisma": "^6.2.0",
    "supertest": "^7.1.4",
    "tsx": "^4.19.2",
    "typescript": "~5.8.3",
    "vitest": "^3.0.0"
