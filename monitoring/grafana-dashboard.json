{
  "dashboard": {
    "title": "ONYX Protocol - Production Monitoring",
    "tags": ["onyx", "defi", "production"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "API Request Rate",
        "type": "graph",
        "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "rate(http_requests_total[5m])",
            "legendFormat": "{{method}} {{route}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "reqps", "label": "Requests/sec" },
          { "format": "short" }
        ],
        "legend": { "show": true, "alignAsTable": true, "avg": true, "current": true }
      },
      {
        "id": 2,
        "title": "API Response Time (P95 & P99)",
        "type": "graph",
        "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "P95 - {{route}}",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.99, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "P99 - {{route}}",
            "refId": "B"
          }
        ],
        "yaxes": [
          { "format": "s", "label": "Response Time" },
          { "format": "short" }
        ],
        "legend": { "show": true, "alignAsTable": true, "avg": true, "current": true },
        "alert": {
          "conditions": [
            {
              "evaluator": { "params": [1], "type": "gt" },
              "operator": { "type": "and" },
              "query": { "params": ["A", "5m", "now"] },
              "reducer": { "params": [], "type": "avg" },
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "frequency": "60s",
          "handler": 1,
          "name": "High API Response Time",
          "noDataState": "no_data",
          "notifications": []
        }
      },
      {
        "id": 3,
        "title": "HTTP Status Codes",
        "type": "graph",
        "gridPos": { "x": 0, "y": 8, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "rate(http_requests_total{status_code=~\"2..\"}[5m])",
            "legendFormat": "2xx Success",
            "refId": "A"
          },
          {
            "expr": "rate(http_requests_total{status_code=~\"4..\"}[5m])",
            "legendFormat": "4xx Client Error",
            "refId": "B"
          },
          {
            "expr": "rate(http_requests_total{status_code=~\"5..\"}[5m])",
            "legendFormat": "5xx Server Error",
            "refId": "C"
          }
        ],
        "yaxes": [
          { "format": "reqps", "label": "Requests/sec" },
          { "format": "short" }
        ],
        "legend": { "show": true, "alignAsTable": true, "avg": true, "current": true }
      },
      {
        "id": 4,
        "title": "Active Connections",
        "type": "graph",
        "gridPos": { "x": 12, "y": 8, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "active_connections",
            "legendFormat": "Active Connections",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "short", "label": "Connections" },
          { "format": "short" }
        ],
        "legend": { "show": true },
        "alert": {
          "conditions": [
            {
              "evaluator": { "params": [1000], "type": "gt" },
              "operator": { "type": "and" },
              "query": { "params": ["A", "5m", "now"] },
              "reducer": { "params": [], "type": "avg" },
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "frequency": "60s",
          "handler": 1,
          "name": "High Connection Count",
          "noDataState": "no_data",
          "notifications": []
        }
      },
      {
        "id": 5,
        "title": "CPU Usage",
        "type": "graph",
        "gridPos": { "x": 0, "y": 16, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "rate(process_cpu_seconds_total[5m]) * 100",
            "legendFormat": "CPU Usage %",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "percent", "label": "CPU %" },
          { "format": "short" }
        ],
        "legend": { "show": true },
        "alert": {
          "conditions": [
            {
              "evaluator": { "params": [80], "type": "gt" },
              "operator": { "type": "and" },
              "query": { "params": ["A", "5m", "now"] },
              "reducer": { "params": [], "type": "avg" },
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "frequency": "60s",
          "handler": 1,
          "name": "High CPU Usage",
          "noDataState": "no_data",
          "notifications": []
        }
      },
      {
        "id": 6,
        "title": "Memory Usage",
        "type": "graph",
        "gridPos": { "x": 12, "y": 16, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "process_resident_memory_bytes / 1024 / 1024",
            "legendFormat": "Memory (MB)",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "decmbytes", "label": "Memory" },
          { "format": "short" }
        ],
        "legend": { "show": true }
      },
      {
        "id": 7,
        "title": "Error Rate",
        "type": "singlestat",
        "gridPos": { "x": 0, "y": 24, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "rate(http_requests_total{status_code=~\"5..\"}[5m]) / rate(http_requests_total[5m]) * 100",
            "refId": "A"
          }
        ],
        "format": "percent",
        "thresholds": "1,5",
        "colors": ["#299c46", "#e0b400", "#d44a3a"],
        "valueName": "current"
      },
      {
        "id": 8,
        "title": "Average Response Time",
        "type": "singlestat",
        "gridPos": { "x": 6, "y": 24, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "rate(http_request_duration_seconds_sum[5m]) / rate(http_request_duration_seconds_count[5m])",
            "refId": "A"
          }
        ],
        "format": "s",
        "thresholds": "0.5,1",
        "colors": ["#299c46", "#e0b400", "#d44a3a"],
        "valueName": "current"
      },
      {
        "id": 9,
        "title": "Total Requests (5m)",
        "type": "singlestat",
        "gridPos": { "x": 12, "y": 24, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "sum(increase(http_requests_total[5m]))",
            "refId": "A"
          }
        ],
        "format": "short",
        "valueName": "current",
        "sparkline": { "show": true, "full": false, "lineColor": "rgb(31, 120, 193)" }
      },
      {
        "id": 10,
        "title": "Uptime",
        "type": "singlestat",
        "gridPos": { "x": 18, "y": 24, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "time() - process_start_time_seconds",
            "refId": "A"
          }
        ],
        "format": "s",
        "valueName": "current"
      },
      {
        "id": 11,
        "title": "Smart Contract Interactions",
        "type": "graph",
        "gridPos": { "x": 0, "y": 28, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "rate(contract_calls_total[5m])",
            "legendFormat": "{{contract}} - {{method}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "ops", "label": "Calls/sec" },
          { "format": "short" }
        ],
        "legend": { "show": true, "alignAsTable": true, "avg": true, "current": true }
      },
      {
        "id": 12,
        "title": "Gas Price Tracking",
        "type": "graph",
        "gridPos": { "x": 12, "y": 28, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "gas_price_gwei",
            "legendFormat": "{{network}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "short", "label": "Gwei" },
          { "format": "short" }
        ],
        "legend": { "show": true, "alignAsTable": true, "avg": true, "current": true, "max": true }
      },
      {
        "id": 13,
        "title": "Database Query Performance",
        "type": "graph",
        "gridPos": { "x": 0, "y": 36, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(db_query_duration_seconds_bucket[5m]))",
            "legendFormat": "P95 - {{query_type}}",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.99, rate(db_query_duration_seconds_bucket[5m]))",
            "legendFormat": "P99 - {{query_type}}",
            "refId": "B"
          }
        ],
        "yaxes": [
          { "format": "s", "label": "Query Time" },
          { "format": "short" }
        ],
        "legend": { "show": true, "alignAsTable": true, "avg": true, "current": true }
      },
      {
        "id": 14,
        "title": "WebSocket Connections",
        "type": "graph",
        "gridPos": { "x": 12, "y": 36, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "websocket_connections_active",
            "legendFormat": "Active WS Connections",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "short", "label": "Connections" },
          { "format": "short" }
        ],
        "legend": { "show": true }
      }
    ],
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
    },
    "templating": {
      "list": [
        {
          "name": "datasource",
          "type": "datasource",
          "query": "prometheus",
          "current": {
            "text": "Prometheus",
            "value": "Prometheus"
          }
        },
        {
          "name": "environment",
          "type": "query",
          "query": "label_values(http_requests_total, environment)",
          "current": {
            "text": "production",
            "value": "production"
          },
          "multi": false,
          "includeAll": false
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "datasource": "Prometheus",
          "enable": true,
          "expr": "ALERTS{alertstate=\"firing\"}",
          "iconColor": "red",
          "name": "Alerts",
          "step": "60s",
          "tagKeys": "alertname",
          "textFormat": "{{alertname}}",
          "titleFormat": "Alert"
        }
      ]
    }
  }
}
